<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/student_discussion_item_linear_layout_id">

        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="170dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/student_discussion_response_Image"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/student_discussion_response_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="4dp"
            />

        <TextView
            android:id="@+id/student_discussion_response_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discussion Topic"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/student_discussion_response_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discussion Topic"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />

        <EditText
            android:id="@+id/student_discussion_your_response"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:lines="2"
            android:gravity="center"
            android:hint="Your Response"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/student_discussion_response"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Response"
            android:background="@drawable/admin_corners"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>