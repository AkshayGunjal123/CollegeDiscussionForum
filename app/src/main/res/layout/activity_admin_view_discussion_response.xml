<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="8dp"
    tools:context=".StudentDiscussionRecord">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Discussion Response"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/admin_view_discussion_response_Image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/admin_view_discussion_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Student Name"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/admin_view_discussion_student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Student Email"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/admin_view_discussion_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Discussion Topic"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Response: "
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:id="@+id/admin_view_discussion_response_recyclerView"
        />

</LinearLayout>